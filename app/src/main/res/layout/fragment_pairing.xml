<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp">
                    <RelativeLayout
                        android:id="@+id/frame_add_events"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_swap_video"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_50percent"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Videos"
                            android:textAllCaps="false"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_swap_image"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/btn_swap_video"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_50percent"
                            android:paddingVertical="4dp"
                            android:text="Images"
                            android:textAllCaps="false"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_swap_event"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/btn_swap_image"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_50percent"
                            android:paddingVertical="4dp"
                            android:text="Events"
                            android:textAllCaps="false"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_event_love"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/btn_swap_event"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_50percent"
                            android:paddingVertical="4dp"
                            android:text="Love"
                            android:textAllCaps="false"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_gen_baby"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/btn_event_love"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_50percent"
                            android:paddingVertical="4dp"
                            android:text="Videos"
                            android:textAllCaps="false"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/frame_create_proj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/frame_add_events">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create your own videos"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/btn_add_new_event"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/bg_suggest_new_proj">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/img_create_proj"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/frame_highlight_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@id/frame_create_proj"
                        app:layout_constraintStart_toStartOf="parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Highlight videos"
                                android:layout_alignParentLeft="true"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:lineHeight="25dp"
                                />
                            <TextView
                                android:id="@+id/btn_show_more_highlight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/white"
                                android:text="Show more"/>
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_highlight_video"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            >


                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frame_funny_face"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@id/frame_highlight_video"
                        app:layout_constraintStart_toStartOf="parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Funny videos"
                                android:layout_alignParentLeft="true"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:lineHeight="25dp"
                                />
                            <TextView
                                android:id="@+id/btn_show_more_funny_video"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/white"
                                android:text="Show more"/>
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_funny_videos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            >


                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>





    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>